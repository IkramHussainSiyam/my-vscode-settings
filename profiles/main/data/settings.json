  // ----- Most Important Settings for linting and formatting ----- //
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.organizeImports": "explicit"
  },

  "editor.formatOnType": true,
  "html.format.templating": true,
  "editor.formatOnPaste": true,
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "eslint.run": "onSave",

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  "path-autocomplete.extensionOnImport": true,
  "path-autocomplete.excludedItems": {
    "*/.js": {
      "when": "**"
    },
    "*/.jsx": {
      "when": "**"
    }
  },

  // change later if needed
  "css.validate": false,

  "typescript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.implementationsCodeLens.showOnInterfaceMethods": true,
  "merge-conflict.codeLens.enabled": true,
  "errorLens.enableOnDiffView": true,
  "errorLens.ignoreUntitled": true,
  "errorLens.margin": "2ch",
  "errorLens.removeLinebreaks": false,
  "editor.showFoldingControls": "mouseover",
  "editor.glyphMargin": false,

  // ----- Git settings ----- //
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "editor.scrollbar.verticalScrollbarSize": 15,
  "markdown.preview.breaks": true,
  "editor.minimap.enabled": false,
  "editor.autoClosingQuotes": "always",
  "editor.autoClosingBrackets": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.defaultColorDecorators": "auto",

  // ----- Tailwind settings ----- //
  "scss.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.experimental.classRegex": [
    "twc\\.[^`]+`([^`]*)`",
    "twc\\([^`]*?\\)`([^`]*)`",
    ["twc\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twc\\([^`]*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["clsx\\(([^]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    ["classNames\\(([^)]*)\\)", "[\"'`]([^\"'`]*)[\"'`]"],
    ["toastClassName\\(([^)]*)\\)", "[\"'`]([^\"'`]*)[\"'`]"],
    "tailwind\\('([^)]*)\\')",
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["classList={{([^;]*)}}", "\\s*?[\"'`]([^\"'`]*).*?:"],
    ["variant={{([^;]*)}}", "\\s*?[\"'`]([^\"'`]*).*?:"],
    ["variants={{([^;]*)}}", "\\s*?[\"'`]([^\"'`]*).*?:"],
    ["classList.(?:add|remove)\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    "@tw\\s\\*/\\s+[\"'`]([^\"'`]*)",
    "tw`([^`]*)", // tw`...`
    "tw=\"([^\"]*)", // <div tw="..." />
    "tw={\"([^\"}]*)", // <div tw={"..."} />
    "tw\\.\\w+`([^`]*)", // tw.xxx`...`
    "tw\\(.*?\\)`([^`]*)" // tw(Component)`...`
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "toastClassName",
    "bodyClassName",
    "ngClass",
    "classList",
    "classes",
    "cva",
    "cn",
    "tw",
    "styled"
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

